# Local Development Environment Configuration
# Copy this to .env and modify as needed for local development

# Domain Configuration
DOMAIN_NAME=localhost
PMA_DOMAIN=localhost:8081
APACHE_SERVER_NAME=localhost

# SSL/TLS Configuration (disabled for local)
ENABLE_TLS=false
CERT_RESOLVER=
TRAEFIK_ENTRYPOINT=web
TRAEFIK_INSECURE=true

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080
DB_PORT=3306

# Database Configuration
DB_PASSWORD=abedeport_local_password
MYSQL_ROOT_PASSWORD=root_local_password

# Application Configuration
APP_ENV=local
APP_DEBUG=true

# Traefik Configuration
TRAEFIK_LOG_LEVEL=DEBUG

# ACME Configuration (not used in local)
ACME_EMAIL=admin@localhost

# phpMyAdmin Configuration
PMA_URL=http://localhost:8081/ 