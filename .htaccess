RewriteEngine On
Options All -Indexes
DirectoryIndex index.html index.php

# Directory exists - serve directly
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule . - [L]

# File exists - serve directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule . - [L]

# Simple directory routing with existence check
RewriteCond ejercicio/index.php -f
RewriteRule ^ejercicio/?$ ejercicio/index.php [L]

RewriteCond noticias/index.php -f
RewriteRule ^noticias/?$ noticias/index.php [L]

RewriteCond admin/index.php -f
RewriteRule ^admin/?$ admin/index.php [L]

# Handle subdirectory files
RewriteRule ^ejercicio/(.+)$ ejercicio/$1 [L]
RewriteRule ^noticias/(.+)$ noticias/$1 [L]
RewriteRule ^admin/(.+)$ admin/$1 [L]

# Fallback to router for unmatched requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ router.php [L]

# Cache optimization rules
<IfModule mod_expires.c>
    ExpiresActive on
    
    # Images - 1 year
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Fonts - 1 year
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # CSS and JavaScript - 1 year
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # HTML - 1 day
    ExpiresByType text/html "access plus 1 day"
</IfModule>

# Add cache-control headers
<IfModule mod_headers.c>
    # Static assets - 1 year cache
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|woff|woff2|ttf|eot|css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # HTML files - 1 day cache
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>